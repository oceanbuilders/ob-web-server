  body
    nav.navbar.navbar-expand-lg.navbar-light.navbar-laravel
      .container
        img#logo(src="https://ocean.builders/wp-content/uploads/2020/02/white-back-logo-1.png" href="https://ocean.builders/" alt="Ocean Builders" data-height-percentage="100" data-actual-width="800" data-actual-height="579")
